<div>
  <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
      <% if @book.errors.any? %>
       <div id="error_explanation" class="alert_alert-danger">
         <ul>
           <%= @book.errors.count %> errors prohibited this user form being saved.
           <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
         </ul>
        </div>
      <% end %>
      
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
</div>